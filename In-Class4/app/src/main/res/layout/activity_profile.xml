<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ProfileFragment">

  <TextView
    android:id="@+id/textView_profile_name_label"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="60dp"
    android:layout_marginTop="36dp"
    android:text="@string/name_label"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

  <TextView
    android:id="@+id/textView_profile_name_value"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="120dp"
    android:text="@string/my_name"
    app:layout_constraintBaseline_toBaselineOf="@+id/textView_profile_name_label"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintStart_toEndOf="@+id/textView_profile_name_label" />

  <TextView
    android:id="@+id/textView_profile_email_label"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="40dp"
    android:text="@string/email_label"
    app:layout_constraintStart_toStartOf="@+id/textView_profile_name_label"
    app:layout_constraintTop_toBottomOf="@+id/textView_profile_name_label" />

  <TextView
    android:id="@+id/textView_profile_email_value"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/email_value_text"
    app:layout_constraintBaseline_toBaselineOf="@+id/textView_profile_email_label"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintStart_toStartOf="@+id/textView_profile_name_value" />

  <TextView
    android:id="@+id/textView_profile_id_label"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="60dp"
    android:text="@string/id_label"
    app:layout_constraintStart_toStartOf="@+id/textView_profile_email_label"
    app:layout_constraintTop_toBottomOf="@+id/textView_profile_email_label" />

  <TextView
    android:id="@+id/textView_profile_id_value"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/id_value"
    app:layout_constraintBaseline_toBaselineOf="@+id/textView_profile_id_label"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintStart_toStartOf="@+id/textView_profile_email_value" />

  <TextView
    android:id="@+id/textView_profile_description_label"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="72dp"
    android:text="@string/department_label"
    app:layout_constraintStart_toStartOf="@+id/textView_profile_id_label"
    app:layout_constraintTop_toBottomOf="@+id/textView_profile_id_label" />

  <TextView
    android:id="@+id/textView_profile_department_value"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/my_department"
    app:layout_constraintBaseline_toBaselineOf="@+id/textView_profile_description_label"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintStart_toStartOf="@+id/textView_profile_id_value" />


</androidx.constraintlayout.widget.ConstraintLayout>
