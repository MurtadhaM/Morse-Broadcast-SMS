<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

  android:layout_width="match_parent"
  android:orientation="vertical"
  android:layout_height="match_parent">


  <TextView
    android:id="@+id/app_name_value"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/name_apps"
    android:textStyle="bold"
    android:fontFamily="cursive"

    android:textColor="#2196F3"
    android:textSize="29sp" />

  <TextView
    android:id="@+id/app_artist_name_value"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    android:textColor="#009688"
    android:text="@string/artist_apps"
    android:textSize="19sp" />

  <TextView
    android:id="@+id/app_release_date_value"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
  android:layout_marginLeft="250dp"
    android:textColor="#650606"
    android:fontFamily="monospace"

    android:text="@string/date_apps"
    android:textSize="19sp" />


</LinearLayout>
