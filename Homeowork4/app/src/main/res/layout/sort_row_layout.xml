<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/SortElementLayout"
  android:layout_width="match_parent"
  android:layout_height="wrap_content">

  <TextView
    android:id="@+id/textView_sort_label"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_weight="1"
    android:text="@string/sort_label"
    android:textColor="@color/black"
    android:textSize="10pt"
    android:textStyle="bold"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="@+id/imageView_ascending"
    app:layout_constraintVertical_bias="0.376" />

  <ImageView
    android:id="@+id/imageView_ascending"
    android:layout_width="100dp"
    android:layout_height="124dp"
    android:layout_marginEnd="16dp"
    android:layout_weight="1"
    android:contentDescription="@string/ascending_sort"
    app:layout_constraintBottom_toBottomOf="@+id/imageView_descending"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:srcCompat="@drawable/ic_sort_descending" />

  <ImageView
    android:id="@+id/imageView_descending"
    android:layout_width="100dp"
    android:layout_height="124dp"
    android:layout_marginEnd="40dp"
    android:layout_weight="1"
    android:contentDescription="@string/descending_sort"
    app:layout_constraintEnd_toStartOf="@+id/imageView_ascending"
    app:layout_constraintTop_toTopOf="parent"
    app:srcCompat="@drawable/ic_sort_ascending" />

  <com.google.android.material.divider.MaterialDivider
    android:id="@+id/materialDivider"
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:backgroundTint="#E80000"
    android:fadingEdge="horizontal"
    app:dividerColor="@color/teal_200"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/textView_sort_label"
    app:layout_constraintVertical_bias="1.0" />
</androidx.constraintlayout.widget.ConstraintLayout>
